{
  "name": "oceagpx",
  "version": "1.0.0",
  "description": "OceanPlot SQLite to GPX converter for Lightroom Classic geotagging",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:preload && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:preload && npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "dist": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac:install": "npm run build:mac && rm -rf /Applications/OceaGPX.app && cp -R release/mac-arm64/OceaGPX.app /Applications/ && echo \"正常完了 バージョン $(node -p \"require('./package.json').version\")\" && say -v Kyoko \"OceaGPXのビルドとインストールが完了しました\" || (echo \"エラーが発生しました\" && say -v Kyoko \"OceaGPXでエラーが発生しました\" && exit 1)",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.7.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.2",
    "@mui/material": "^5.15.2",
    "@mui/x-data-grid": "^8.23.0",
    "@types/leaflet": "^1.9.21",
    "better-sqlite3": "^12.5.0",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1"
  },
  "build": {
    "appId": "com.oceagpx.app",
    "productName": "OceaGPX",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dir"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
